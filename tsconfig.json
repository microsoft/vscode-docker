{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "outDir": "out",
        "lib": [
            "es7"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false, // TODO
        "noImplicitReturns": false, // TODO
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false, // TODO
        "strictNullChecks": false, // TODO
        "strict": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "gulpfile.ts"
    ]
}
